extends ../users/layouts/general.pug

block content
  h1 Products
  .d-flex
  .row
    each product in products
      .col-sm-6.col-lg-3
        .card.mb-3
          img.card-img-top(src= product.image)
          .card-body
            h5.card-title= product.name
            p.card-text= product.description 
            a.btn.btn-primary(href='#') Go


  nav(aria-label='Page navigation example')
    ul.pagination.justify-content-center
      li(class='page-item '+previousIsDisabled)
        a.page-link(href='?page='+(currentPage-1), aria-label='Previous')
          span(aria-hidden='true') &laquo;
          span.sr-only Previous
      li(class='page-item '+ isFirstActive) 
        a.page-link(href='#')= x -1
      li(class='page-item '+ isSecondActive) 
        a.page-link(href='#')= x 
      li(class='page-item '+ isThirdActive) 
        a.page-link(href='#')= x + 1
      li(class='page-item '+nextIsDisabled)
        a.page-link(href='?page='+(currentPage + 1), aria-label='Next')
          span(aria-hidden='true') &raquo;
          span.sr-only Next
